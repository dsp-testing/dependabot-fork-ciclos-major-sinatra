
<h3>Price List</h3>
<p>
  Including Bike Insurance and Cleaning (€2.50 / day)
</p>
<table class="table text-end table-striped">
  <thead>
  <tr>
    <th>Day</th>
    <th>€ / day</th>
    <th>Hire Price</th>
  </tr>
  </thead>
  <tbody>
  <% prices.each_with_index do |price, day| %>
    <tr>
      <td><%= day + 1 %></td>
      <td>€<%= sprintf('%.2f', (price.to_f / (day + 1))) %></td>
      <td>€<%= sprintf('%.2f', price) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
